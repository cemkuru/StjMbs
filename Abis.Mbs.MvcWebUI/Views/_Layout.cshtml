                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-controller="Home" asp-action="Index">Home</a>
                                    <a class="dropdown-item" asp-controller="Home" asp-action="Privacy">Privacy</a>
                                    <a class="dropdown-item" asp-controller="Home" asp-action="Contact">Contact</a>
                                    <a class="dropdown-item" asp-controller="ShortAnnouncement" asp-action="Index">Announcement</a>

                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="ShortAnnouncement" asp-action="Index">Announcement</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" style="text-align:right!important;" asp-controller="Account" asp-action="Register">Register</a>
                            </li>

                        </ul>
                </div>
            </div>


            <form class="navbar-form navbar-left" action="/action_page.php">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search" name="search">
                    <div class="input-group-btn">
                        <button type="submit" class="btn btn-danger">Submit</button>

                    </div>
                </div>
            </form>


        </nav>

    </header>
    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="col-lg-12">
        @RenderBody()
    </div>

    <!--Footer-->
    <footer class="page-footer font-small mdb-color darken-3 pt-4 " style="background-color:#bf1f1f ;!important;">


        <div class="container" style="color:white ">

            <!--Grid row-->
            <div class="row d-flex justify-content-center">

                <!--Grid column-->
                <div class="col-md-6">

                    <!-- Video -->
                    <div class="embed-responsive embed-responsive-16by9 mb-4">
